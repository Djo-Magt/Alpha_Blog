
<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>New category</h1>
        <div class="mt-3">
          <%= simple_form_for @category do |f| %>
            <%= f.input :name %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
          <div class="mb-3">
            <%= link_to "Retour", articles_path  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
